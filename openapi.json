{
  "openapi": "3.0.0",
  "info": {
    "title": "BCGPT - Basecamp Integration API",
    "description": "Complete Basecamp integration for ChatGPT with projects, todos, schedules, and more",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bcgpt.onrender.com",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "Project": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "status": { "type": "string" },
          "created_at": { "type": "string" },
          "updated_at": { "type": "string" },
          "app_url": { "type": "string" }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "due_on": { "type": "string" },
          "completed": { "type": "boolean" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://launchpad.37signals.com/authorization/new",
            "tokenUrl": "https://launchpad.37signals.com/authorization/token",
            "scopes": {
              "read": "Read access to Basecamp",
              "write": "Write access to Basecamp"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "oauth2": ["read", "write"]
    }
  ],
  "paths": {
    "/action/startbcgpt": {
      "post": {
        "summary": "Connect to Basecamp",
        "description": "Show current connection status and user info. Returns auth and logout URLs.",
        "operationId": "startbcgpt",
        "security": [],
        "responses": {
          "200": {
            "description": "Connection status and user information"
          }
        }
      }
    },
    "/action/list_projects": {
      "post": {
        "summary": "List all Basecamp projects",
        "operationId": "list_projects",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "archived": { "type": "boolean", "description": "List archived projects instead of active" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of projects with metadata" }
        }
      }
    },
    "/action/find_project": {
      "post": {
        "summary": "Find a specific project by name",
        "operationId": "find_project",
        "requestBody": {
          "required": true,
