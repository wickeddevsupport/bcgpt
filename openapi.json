                  },
                "recording_id": {
                  "oneOf": [
                    { "type": "integer" },
                    { "type": "string" }
                  ],
                  "description": "Recording ID or card ID. You may also pass a full Basecamp recording/card URL."
                },
                "card_id": {
                  "oneOf": [
                    { "type": "integer" },
                    { "type": "string" }
                  ],
                  "description": "Alias for recording_id when commenting on a kanban card."
                },
                "card_url": {
                  "type": "string",
                  "description": "Full Basecamp card URL (will be parsed to bucket + card id)."
                },
                "recording_url": {
                  "type": "string",
                  "description": "Full Basecamp recording URL (will be parsed to bucket + recording id)."
                },
                "recording_query": {
                  "type": "string"
                },
