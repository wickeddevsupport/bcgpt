{
  "openapi": "3.0.0",
  "info": {
    "title": "BCGPT - Basecamp Integration API",
    "description": "Complete Basecamp integration for ChatGPT with 30 essential operations plus basecamp_raw for advanced use.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bcgpt.onrender.com",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "app_url": {
            "type": "string"
          }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "due_on": {
            "type": "string"
          },
          "completed": {
            "type": "boolean"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://launchpad.37signals.com/authorization/new",
            "tokenUrl": "https://launchpad.37signals.com/authorization/token",
            "scopes": {
              "read": "Read access to Basecamp",
              "write": "Write access to Basecamp"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "oauth2": [
        "read",
        "write"
      ]
    }
  ],
