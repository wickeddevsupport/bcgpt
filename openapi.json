{
  "openapi": "3.0.0",
  "info": {
    "title": "BCGPT - Basecamp Integration API",
    "description": "Complete Basecamp integration for ChatGPT with 30 essential operations plus basecamp_raw for advanced use.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bcgpt.onrender.com",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "Project": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "status": { "type": "string" },
          "created_at": { "type": "string" },
          "updated_at": { "type": "string" },
          "app_url": { "type": "string" }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "due_on": { "type": "string" },
          "completed": { "type": "boolean" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://launchpad.37signals.com/authorization/new",
            "tokenUrl": "https://launchpad.37signals.com/authorization/token",
            "scopes": {
              "read": "Read access to Basecamp",
              "write": "Write access to Basecamp"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "oauth2": ["read", "write"]
    }
  ],
  "paths": {
    "/action/startbcgpt": {
      "post": {
        "summary": "Connect to Basecamp",
        "description": "Show current connection status and user info. Returns auth and logout URLs.",
        "operationId": "startbcgpt",
        "security": [],
        "responses": {
          "200": {
            "description": "Connection status and user information"
          }
        }
      }
    },
    "/action/list_projects": {
      "post": {
        "summary": "List all Basecamp projects",
        "operationId": "list_projects",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "archived": { "type": "boolean", "description": "List archived projects instead of active" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of projects with metadata" }
        }
      }
    },
    "/action/find_project": {
      "post": {
        "summary": "Find a project by name",
        "operationId": "find_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "description": "Project name (fuzzy match)" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Project details" }
        }
      }
    },
    "/action/daily_report": {
      "post": {
        "summary": "Daily report of todos due today",
        "operationId": "daily_report",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "description": "YYYY-MM-DD (defaults to today)" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Daily summary with due/overdue counts" }
        }
      }
    },
    "/action/list_todos_due": {
      "post": {
        "summary": "List todos due on a specific date",
        "operationId": "list_todos_due",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "include_overdue": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todos due on date" }
        }
      }
    },
    "/action/search_todos": {
      "post": {
        "summary": "Search todos by keyword across all projects",
        "operationId": "search_todos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "query": { "type": "string" } },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/action/list_todos_for_project": {
      "post": {
        "summary": "List all todos in a project",
        "operationId": "list_todos_for_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "project": { "type": "string" } },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todos organized by list" }
        }
      }
    },
    "/action/create_todo": {
      "post": {
        "summary": "Create a new todo",
        "operationId": "create_todo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "task": { "type": "string" },
                  "description": { "type": "string" },
                  "due_on": { "type": "string" }
                },
                "required": ["project", "task"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Todo created" }
        }
      }
    },
    "/action/complete_task_by_name": {
      "post": {
        "summary": "Mark a todo as complete",
        "operationId": "complete_task_by_name",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "task": { "type": "string", "description": "Todo content (fuzzy match)" }
                },
                "required": ["project", "task"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo completed" }
        }
      }
    },
    "/action/assignment_report": {
      "post": {
        "summary": "Group todos by assignee in a project",
        "operationId": "assignment_report",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "max_todos": { "type": "integer" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todos grouped by assignee" }
        }
      }
    },
    "/action/list_card_tables": {
      "post": {
        "summary": "List kanban boards in a project",
        "operationId": "list_card_tables",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "project": { "type": "string" } },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Card tables" }
        }
      }
    },
    "/action/list_card_table_columns": {
      "post": {
        "summary": "List columns in a kanban board",
        "operationId": "list_card_table_columns",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "card_table_id": { "type": "integer" }
                },
                "required": ["project", "card_table_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Columns" }
        }
      }
    },
    "/action/list_card_table_cards": {
      "post": {
        "summary": "List cards in a kanban board",
        "operationId": "list_card_table_cards",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "card_table_id": { "type": "integer" }
                },
                "required": ["project", "card_table_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Cards" }
        }
      }
    },
    "/action/create_card": {
      "post": {
        "summary": "Create a new card in a kanban board",
        "operationId": "create_card",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "card_table_id": { "type": "integer" },
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "due_on": { "type": "string" }
                },
                "required": ["project", "card_table_id", "title"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Card created" }
        }
      }
    },
    "/action/move_card": {
      "post": {
        "summary": "Move or update a card's position",
        "operationId": "move_card",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "card_id": { "type": "integer" },
                  "column_id": { "type": "integer" },
                  "position": { "type": "integer" }
                },
                "required": ["project", "card_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Card updated" }
        }
      }
    },
    "/action/smart_action": {
      "post": {
        "summary": "Smart router for natural language queries",
        "description": "Routes a query to the best action based on context; falls back to global search if needed.",
        "operationId": "smart_action",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "project": { "type": "string", "description": "Optional project context" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Smart action response" }
        }
      }
    },
    "/action/list_message_boards": {
      "post": {
        "summary": "List message boards in a project",
        "operationId": "list_message_boards",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "project": { "type": "string" } },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Message boards" }
        }
      }
    },
    "/action/list_messages": {
      "post": {
        "summary": "List messages in a project's message board",
        "operationId": "list_messages",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "message_board_id": { "type": "integer" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Messages" }
        }
      }
    },
    "/action/list_documents": {
      "post": {
        "summary": "List documents/files in a project",
        "operationId": "list_documents",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "project": { "type": "string" } },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Documents" }
        }
      }
    },
    "/action/list_uploads": {
      "post": {
        "summary": "List file uploads in a project vault",
        "operationId": "list_uploads",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "vault_id": { "type": "integer" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Files with download URLs" }
        }
      }
    },
    "/action/list_schedule_entries": {
      "post": {
        "summary": "List schedule entries for a project",
        "operationId": "list_schedule_entries",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "start": { "type": "string" },
                  "end": { "type": "string" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Schedule entries" }
        }
      }
    },
    "/action/search_project": {
      "post": {
        "summary": "Search within a project",
        "operationId": "search_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "query": { "type": "string" }
                },
                "required": ["project", "query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/action/list_all_people": {
      "post": {
        "summary": "List all people in the account",
        "operationId": "list_all_people",
        "responses": {
          "200": { "description": "Array of people" }
        }
      }
    },
    "/action/get_my_profile": {
      "post": {
        "summary": "Get current user's profile",
        "operationId": "get_my_profile",
        "responses": {
          "200": { "description": "Current user profile" }
        }
      }
    },
    "/action/list_comments": {
      "post": {
        "summary": "List comments on a recording",
        "operationId": "list_comments",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "recording_id": { "type": "integer" }
                },
                "required": ["project", "recording_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Comments" }
        }
      }
    },
    "/action/create_comment": {
      "post": {
        "summary": "Create a comment on a recording",
        "operationId": "create_comment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "recording_id": { "type": "integer" },
                  "content": { "type": "string" }
                },
                "required": ["project", "recording_id", "content"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Comment created" }
        }
      }
    },
    "/action/get_recordings": {
      "post": {
        "summary": "Query recordings by type across projects",
        "operationId": "get_recordings",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "bucket": { "type": "string" },
                  "status": { "type": "string" }
                },
                "required": ["type"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Recordings" }
        }
      }
    },
    "/action/trash_recording": {
      "post": {
        "summary": "Move a recording to trash",
        "operationId": "trash_recording",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string" },
                  "recording_id": { "type": "integer" }
                },
                "required": ["project", "recording_id"]
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Recording trashed" }
        }
      }
    },
    "/action/search_recordings": {
      "post": {
        "summary": "Global search across all recordings",
        "operationId": "search_recordings",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "bucket": { "type": "string", "description": "Project (bucket) id or name" },
                  "type": { "type": "string", "description": "Filter by recording type (e.g., comment, message, todo)" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/action/basecamp_raw": {
      "post": {
        "summary": "Raw Basecamp API call (escape hatch for advanced use)",
        "description": "Make a direct Basecamp API call. Use this for operations not listed above like: get_person (by ID), list_project_people, archive/unarchive recordings, get_upload details, list_vaults, or any custom Basecamp 3 API endpoint.",
        "operationId": "basecamp_raw",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "description": "API path (e.g., /projects.json, /people/123.json) or full URL" },
                  "method": { "type": "string", "description": "HTTP method", "default": "GET" },
                  "body": { "type": "object", "description": "Request body for POST/PUT" }
                },
                "required": ["path"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "API response" }
        }
      }
    }
  }
}
