{
  "openapi": "3.0.0",
  "info": {
    "title": "BCGPT - Basecamp Integration API",
    "description": "Complete Basecamp integration for ChatGPT with projects, todos, schedules, and more",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bcgpt.onrender.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://launchpad.37signals.com/authorization/new",
            "tokenUrl": "https://launchpad.37signals.com/authorization/token",
            "scopes": {
              "read": "Read access to Basecamp",
              "write": "Write access to Basecamp"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "oauth2": ["read", "write"]
    }
  ],
  "paths": {
    "/action/startbcgpt": {
      "post": {
        "summary": "Connect to Basecamp",
        "description": "Show current connection status and user info. Returns auth and logout URLs.",
        "operationId": "startbcgpt",
        "security": [],
        "responses": {
          "200": {
            "description": "Connection status and user information"
          }
        }
      }
    },
    "/action/list_projects": {
      "post": {
        "summary": "List all Basecamp projects",
        "operationId": "list_projects",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "archived": { "type": "boolean", "description": "List archived projects instead of active" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of projects with metadata" }
        }
      }
    },
    "/action/find_project": {
      "post": {
        "summary": "Find a specific project by name",
        "operationId": "find_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "description": "Project name to search for" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Project details" }
        }
      }
    },
    "/action/daily_report": {
      "post": {
        "summary": "Get daily report of todos",
        "operationId": "daily_report",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "description": "Date in YYYY-MM-DD format (defaults to today)" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Daily report with due today and overdue todos" }
        }
      }
    },
    "/action/list_todos_due": {
      "post": {
        "summary": "List todos due on a specific date",
        "operationId": "list_todos_due",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "description": "Date in YYYY-MM-DD format (defaults to today)" },
                  "include_overdue": { "type": "boolean", "description": "Include overdue items" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of todos due on the date" }
        }
      }
    },
    "/action/search_todos": {
      "post": {
        "summary": "Search todos across all projects",
        "operationId": "search_todos",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string", "description": "Search keyword" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/action/list_todos_for_project": {
      "post": {
        "summary": "List all todo lists and items in a project",
        "operationId": "list_todos_for_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo lists and items" }
        }
      }
    },
    "/action/assignment_report": {
      "post": {
        "summary": "Group open todos by assignee in a project",
        "operationId": "assignment_report",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "max_todos": { "type": "integer", "description": "Maximum todos to return" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todos grouped by assignee" }
        }
      }
    },
    "/action/create_todo": {
      "post": {
        "summary": "Create a new todo in a project",
        "operationId": "create_todo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "task": { "type": "string", "description": "Todo text/content" },
                  "todolist": { "type": "string", "description": "Specific todo list to add to (optional)" },
                  "description": { "type": "string", "description": "Detailed description (optional)" },
                  "due_on": { "type": "string", "description": "Due date in YYYY-MM-DD format (optional)" }
                },
                "required": ["project", "task"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Created todo details" }
        }
      }
    },
    "/action/complete_task_by_name": {
      "post": {
        "summary": "Mark a todo as complete by name",
        "operationId": "complete_task_by_name",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "task": { "type": "string", "description": "Task name to complete" }
                },
                "required": ["project", "task"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Completion confirmation" }
        }
      }
    },
    "/action/list_card_tables": {
      "post": {
        "summary": "List kanban boards (card tables) in a project",
        "operationId": "list_card_tables",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of card tables" }
        }
      }
    },
    "/action/list_card_table_columns": {
      "post": {
        "summary": "List columns in a card table (kanban board)",
        "operationId": "list_card_table_columns",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "card_table_id": { "type": "integer", "description": "Card table ID" }
                },
                "required": ["project", "card_table_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of columns" }
        }
      }
    },
    "/action/list_card_table_cards": {
      "post": {
        "summary": "List cards in a card table",
        "operationId": "list_card_table_cards",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "card_table_id": { "type": "integer", "description": "Card table ID" }
                },
                "required": ["project", "card_table_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of cards" }
        }
      }
    },
    "/action/create_card": {
      "post": {
        "summary": "Create a new card in a card table",
        "operationId": "create_card",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "card_table_id": { "type": "integer", "description": "Card table ID" },
                  "title": { "type": "string", "description": "Card title" },
                  "content": { "type": "string", "description": "Card description (optional)" },
                  "column_id": { "type": "integer", "description": "Column ID to add to" },
                  "due_on": { "type": "string", "description": "Due date (optional)" }
                },
                "required": ["project", "card_table_id", "title", "column_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Created card details" }
        }
      }
    },
    "/action/move_card": {
      "post": {
        "summary": "Move a card to a different column",
        "operationId": "move_card",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "card_id": { "type": "integer", "description": "Card ID" },
                  "column_id": { "type": "integer", "description": "Target column ID" },
                  "position": { "type": "integer", "description": "Position in column (optional)" }
                },
                "required": ["project", "card_id", "column_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Card moved successfully" }
        }
      }
    },
    "/action/get_hill_chart": {
      "post": {
        "summary": "Get the hill chart for a project",
        "operationId": "get_hill_chart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Hill chart data" }
        }
      }
    },
    "/action/list_message_boards": {
      "post": {
        "summary": "List message boards in a project",
        "operationId": "list_message_boards",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of message boards" }
        }
      }
    },
    "/action/list_messages": {
      "post": {
        "summary": "List messages in a message board",
        "operationId": "list_messages",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "board": { "type": "string", "description": "Message board name or ID" }
                },
                "required": ["project", "board"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of messages" }
        }
      }
    },
    "/action/list_documents": {
      "post": {
        "summary": "List documents and files in a project",
        "operationId": "list_documents",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of documents" }
        }
      }
    },
    "/action/list_schedule_entries": {
      "post": {
        "summary": "List schedule entries for a project",
        "operationId": "list_schedule_entries",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "from": { "type": "string", "description": "Start date (optional)" },
                  "to": { "type": "string", "description": "End date (optional)" }
                },
                "required": ["project"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "List of schedule entries" }
        }
      }
    },
    "/action/search_project": {
      "post": {
        "summary": "Search within a project",
        "operationId": "search_project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": { "type": "string", "description": "Project name or ID" },
                  "query": { "type": "string", "description": "Search query" }
                },
                "required": ["project", "query"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/action/basecamp_raw": {
      "post": {
        "summary": "Make a raw Basecamp API call",
        "operationId": "basecamp_raw",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "description": "API path or full URL (e.g., /projects.json)" },
                  "method": { "type": "string", "description": "HTTP method (GET, POST, PUT, DELETE)", "default": "GET" },
                  "body": { "type": "object", "description": "Request body for POST/PUT (optional)" }
                },
                "required": ["path"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "API response" }
        }
      }
    }
  }
}
