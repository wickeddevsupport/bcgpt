FROM node:22-bookworm

# Install Bun (required for build scripts)
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

RUN corepack enable
# Install Nx globally so we can run it without a root pnpm workspace.
RUN npm install -g nx@22.4.5

WORKDIR /app

ARG OPENCLAW_DOCKER_APT_PACKAGES=""
RUN if [ -n "$OPENCLAW_DOCKER_APT_PACKAGES" ]; then \
      apt-get update && \
      DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends $OPENCLAW_DOCKER_APT_PACKAGES && \
      apt-get clean && \
      rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*; \
    fi

# Workspace metadata for Nx
COPY package.json nx.json ./

# Optional custom node (used only when vendoring n8n)
COPY n8n-nodes-basecamp/ ./n8n-nodes-basecamp/

# Optionally include vendored n8n (for embedded n8n) at build time.
# Enable by passing build-arg: --build-arg INCLUDE_VENDORED_N8N=true
# Pin version with: --build-arg N8N_VERSION=n8n@1.76.1
# NOTE: This block intentionally runs *before* copying OpenClaw to maximize Docker caching.
ARG INCLUDE_VENDORED_N8N=false
ARG N8N_VERSION=n8n@1.76.1
RUN set -eux; \
    if [ "$INCLUDE_VENDORED_N8N" = "true" ]; then \
      apt-get update; \
      DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends git; \
      mkdir -p openclaw/vendor; \
      git clone --depth 1 --branch "$N8N_VERSION" https://github.com/n8n-io/n8n.git openclaw/vendor/n8n; \
      cd openclaw/vendor/n8n; \
      corepack enable; \
      pnpm install --frozen-lockfile; \
      pnpm build; \
      cd /app; \
      if [ -d "n8n-nodes-basecamp" ]; then \
        cd n8n-nodes-basecamp && npm run build 2>/dev/null || true; \
        mkdir -p /app/openclaw/vendor/n8n/packages/cli/node_modules/n8n-nodes-basecamp; \
        cp -r dist package.json /app/openclaw/vendor/n8n/packages/cli/node_modules/n8n-nodes-basecamp/; \
      fi; \
    fi

# OpenClaw workspace (includes ui/, packages/, extensions/)
COPY openclaw/ ./openclaw/

# Install OpenClaw workspace deps (includes ui)
RUN corepack pnpm --dir openclaw install --frozen-lockfile

# Build with Nx to match local preflight
ENV NX_DAEMON=false
ARG OPENCLAW_NX_PROJECTS="openclaw-app,openclaw-control-ui"
RUN nx run-many -t build --projects=$OPENCLAW_NX_PROJECTS --output-style=stream

# Force pnpm for UI build (Bun may fail on ARM/Synology architectures)
ENV OPENCLAW_PREFER_PNPM=1

ENV NODE_ENV=production

# Only chown the writable runtime directory; avoid recursive chown on the full repo.
RUN mkdir -p /app/.openclaw && chown -R node:node /app/.openclaw

# Security hardening: Run as non-root user
# The node:22-bookworm image includes a 'node' user (uid 1000)
# This reduces the attack surface by preventing container escape via root privileges
USER node
WORKDIR /app/openclaw

# Start gateway server with default config.
# Binds to loopback (127.0.0.1) by default for security.
#
# For container platforms requiring external health checks:
#   1. Set OPENCLAW_GATEWAY_TOKEN or OPENCLAW_GATEWAY_PASSWORD env var
#   2. Override CMD: ["node","openclaw.mjs","gateway","--allow-unconfigured","--bind","lan"]
CMD ["node", "openclaw.mjs", "gateway", "--allow-unconfigured"]
