FROM node:20.19-bullseye-slim

WORKDIR /app
ENV NODE_ENV=production \
    SKIP_ACTIVEPIECES_INSTALL=true

RUN apt-get update \
  && apt-get install -y --no-install-recommends python3 make g++ \
  && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json ./
COPY scripts/prepare-activepieces-install.js ./scripts/prepare-activepieces-install.js
ENV npm_config_build_from_source=true
RUN npm install --omit=dev --no-audit --no-fund || (cat /root/.npm/_logs/* || true; exit 1)

COPY . .

EXPOSE 10000
CMD ["node", "index.js"]
